{
  "title": "Use caps lock (⇪) as command (⌘) or control (⌃)",
  "rules": [
    {
      "description": "caps lock (⇪) as control (⌃) (Terminal, X11, IntelliJ)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^org\\.macosforge\\.xquartz\\.X11$",
                "^com\\.jetbrains\\.intellij\\.ce$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control (⌃) + tab as command (⌘) + tab (Terminal, X11, IntelliJ)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^org\\.macosforge\\.xquartz\\.X11$",
                "^com\\.jetbrains\\.intellij\\.ce$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control (⌃) + space as command (⌘) + space (Terminal, X11, IntelliJ)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^org\\.macosforge\\.xquartz\\.X11$",
                "^com\\.jetbrains\\.intellij\\.ce$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Fallback: caps lock (⇪) as command (⌘)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ]
        }
      ]
    }
  ]
}
